<h2>Add Stock</h2>

<%= form_with model: @stock do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :ticker %>
  <%= f.text_field :ticker %><br>

  <%= f.label :price %>
  <%= f.text_field :price %><br>

  <%= f.label :cost %>
  <%= f.text_field :cost %><br>

  <%= f.label :shares %>
  <%= f.text_field :shares %><br>

  <%= f.label "Categories" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
  <%= f.fields_for :categories, @stock.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
    <%= categories_fields.label "New Category" %>
  <% end %><br>

  <%= f.submit "Create Stock" %>
<% end %>